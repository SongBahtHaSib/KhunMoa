{
  "version": 2,
  "builds": [
    {
      "src": "wsgi_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb", // เพิ่มบรรทัดนี้: กำหนดขนาด Lambda Function สูงสุด (สำหรับโมเดล)
        "runtime": "python3.9"   // เพิ่มบรรทัดนี้: กำหนดเวอร์ชัน Python
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "wsgi_app.py"
    }
  ]
}
